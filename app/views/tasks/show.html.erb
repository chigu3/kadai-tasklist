<h1>id: <%= @task.id %>のやること</h1>

<table class="table table-bordered">
     <tr>
        <th>id</th>
        <td><p><%= @task.id %></p></td>
    </tr>
    <tr>
        <th>Status</th>
        <td><p><%= @task.status %></p></td>
    </tr>
    <tr>
        <th>Todo</th>
        <td><p><%= @task.content %></p></td>
    </tr>
     
</table>

<%= link_to 'このTodoを編集する', edit_task_path(@task), class: 'btn btn-light' %>
<%= link_to 'このTodoを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>